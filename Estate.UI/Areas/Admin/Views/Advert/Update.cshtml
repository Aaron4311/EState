                type: "Post",
                url: "/Admin/Advert/NeighbourhoodGet?DistrictId=" + districtId,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#NeighbourhoodId").empty()
                    $("#NeighbourhoodId").append(response)

                }

            });
        });
    });
</script>