    $(document).ready(function () {
        $("#SituationId").change(function () {
            var situationId = $(this).val();
            debugger
            $.ajax({
                type: "Post",
                url: "/Admin/Advert/TypeGet?SituationId=" + situationId,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#TypeId").empty()
                    $("#TypeId").append(response)

                }

            });
        });
    });
</script>

